{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "args": [
        "${relativeFile}"
      ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "env": {
        "NODE_ENV": "development",
      },
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via Babel",
      "program": "${workspaceRoot}/src/server/server.ts",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/babel-node",
      "env": {
        "NODE_ENV": "development",
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch production",
      "program": "${workspaceFolder}/dist/server/server.js",
      "env": {
        "NODE_ENV": "production",
      }
    },
  ]
}